<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <h4> Add a Review </h4>
      <%= form_for [@product, @product.review.create] do |f| %>
        <%= f.select :rating, [['Stay Away', 1], ['Poor', 2], ['Mediocre', 3], ['Good', 4], ['Great', 5]] %>
        <%= f.label :description %>
        <%= f.text_area :description %><br />
        <%= f.submit %>
      <% end %>
    </div>

    <div class="row">
      <h4> Reviews </h4>
       <% @review.each do |comment| %>

       <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= comment.user.first_name %> <%= comment.user.last_name %></dd>
          <dt>Ratings</dt>
          <dd><%= comment.rating %>/5</dd>
          <dt>Comment</dt>
          <dd><%= comment.description %></dd>
        </dl>
      <% end %>
    </div>
  </article>

</section>
