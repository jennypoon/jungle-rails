<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Here's a summary:</h4>

    Order Grand Total: <%= number_to_currency((@order.total_cents)/100) %><br>
    Email Associated with order: <%= @order.email %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Image</th>
          <th>Description</th>
          <th>Quanity</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
        <%= render 'order', line_item: line_item %>
        <% end %>
      </tbody>
    </table>


  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>





